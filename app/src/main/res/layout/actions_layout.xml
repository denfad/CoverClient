<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">

    <TextView
            android:text="Может стоит..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:padding="3dp"
            android:textSize="38sp"
            android:elevation="2dp"
            android:background="@drawable/menu_rectangle"
            android:textAlignment="center" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ambulance"
            android:textSize="30sp"
            android:layout_weight="1"
            android:text="Вызвать врача"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_rectangle"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_place"
            android:textSize="30sp"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Доехать до клиники/аптеки"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_rectangle"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/get_advice"
            android:textSize="30sp"
            android:layout_weight="1"
            android:text="Получить совет"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_rectangle"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back"
            android:textSize="30sp"
            android:text="Нет, спасибо"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_rectangle"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>

</LinearLayout>