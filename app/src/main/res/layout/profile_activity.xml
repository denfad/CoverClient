<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Профиль"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:padding="3dp"
                android:textSize="40sp"
                android:elevation="2dp"
                android:background="@drawable/menu_rectangle"
                android:textAlignment="center" />

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                card_view:cardElevation="4dp"
                android:backgroundTint="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingHorizontal="20dp">

                    <TextView
                            android:text="Мой статус:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#B5000000"
                            android:textSize="30sp"
                            android:textAlignment="textStart" />

                    <TextView
                            android:text="Есть симптомы"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/status"
                            android:textSize="25sp"
                            android:textAlignment="textStart" />
                </LinearLayout>

                <Button
                        android:id="@+id/change_status"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Изменить" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                card_view:cardElevation="4dp"
                android:backgroundTint="@color/white">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp">

                <TextView
                        android:text="Часто посещаемые места:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:padding="3dp"
                        android:textSize="25sp"
                        android:elevation="2dp"
                        android:textAlignment="center" />

                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/places" />

                <Button
                        android:id="@+id/add_place"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Добавить место" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
                android:layout_marginVertical="10dp"
                android:id="@+id/back"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад" />
    </LinearLayout>
</ScrollView>

